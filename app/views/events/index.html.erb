<div class="page-header">
  <h1><%= controller_name.humanize %>
    <% if @events.empty? %>
        <small> None to show yet</small>
    <% else %>
        <small><%= action_name %></small>
    <% end %>
    <div class="btn-group right" role="group">
      <%= link_to 'Add', {action: :new} %>
    </div>
  </h1>
</div>


<div class="body_panel panel-default">
  <div class="panel-body">


    <% @events.each do |event| %>
        <div class="col-md-12">
          <div class="col-md-4">

            <p><%= image_tag(event.image_url, size: '250', class: "img-thumbnail") %> </p>

          </div>

          <div class="col-md-6">
            <h2><%= event.name %></h2>
            <br>
            <h4>Description:</h4>
            <div><%= event.description %></div>
            <br>
            <p>Date: <%= event.date %></p>
            <br>
            <p>Location: <%= event.location %></p>
            <br>
            <p>Price: <%= event.price %> bucks</p>


          </div>
        </div>
    <% end %>


  </div>
</div>

