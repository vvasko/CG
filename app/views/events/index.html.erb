<div class="page-header">
  <h1><%=t "#{controller_name}" %>

    <div class="btn-group right" role="group">
      <%= link_to (t 'link_text.today'), events_path(filter_start_date: Date.today) %>
      <%= link_to (t 'link_text.tomorrow'), events_path(filter_start_date: (Date.today+1.day)) %>
      <%= link_to (t 'link_text.all week'), events_path(filter_start_date: Date.today, filter_end_date: (Date.today+7.days)) %>
      <%= link_to (t 'link_text.all time'), events_path %>
    </div>
  </h1>
</div>

<div class="body_panel panel-default">
  <div class="panel-body">


        <% unless @events.blank? %>
            <% @events.each do |event| %>
                <%= render "item", {item: event} %>
      <% end %>
      <% else %>
            <div><%=t 'none_to_show_yet'  %></div>
      <% end %>


  </div>
  <div class="text-center"><%= will_paginate @events, renderer: BootstrapPagination::Rails %></div>
</div>


