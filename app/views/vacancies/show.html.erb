<div class="page-header">
  <h1><%=t controller_name %>
    <small><%= action_name %></small>
  </h1>
</div>

<div class="body_panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col col-md-4 col-lg-3">
        <div class="well">
          <%= link_to image_tag(@vacancy.enterprise.picture_url, :class => 'img-thumbnail', :size => '250'), @vacancy.enterprise %>
        </div>
      </div>
      <div class="col col-md-8 col-lg-9">
        <div class="well">
          <%= print_alert 'danger', "#{t 'This job is no longer actual'}. #{t 'Expired on'} #{@vacancy.close_date}" if @vacancy.expired? %>
          <h3><%= @vacancy.name %></h3>
          <ul class="list-group">
            <li class="list-group-item"><%= t 'expiration' %>: <%= print_date(@vacancy.open_date, @vacancy.close_date, @vacancy.expired? ? 'default' : 'success') %></li>
            <li class="list-group-item"><%= t 'company' %>: <%= link_to @vacancy.enterprise.name, @vacancy.enterprise %></li>
            <%= "<li class=\"list-group-item\">#{t 'category'}: #{@vacancy.job_category.name}</li>".html_safe unless @vacancy.job_category.blank? %>
            <%= "<li class=\"list-group-item\">#{t 'phone'}: #{@vacancy.enterprise.phone}</li>".html_safe unless @vacancy.enterprise.phone.blank? %>
            <%= "<li class=\"list-group-item\">Email: #{@vacancy.enterprise.email}</li>".html_safe unless @vacancy.enterprise.email.blank? %>
            <%= "<li class=\"list-group-item\">#{t 'job type'}: #{@vacancy.job_type.name}</li>".html_safe unless @vacancy.job_type.blank? %>
            <%= "<li class=\"list-group-item\">#{t 'salary'}: #{@vacancy.salary} #{@vacancy.currency.name}</p>".html_safe unless @vacancy.salary.blank? %>
            <%= "<li class=\"list-group-item\">#{t 'location'}: #{@vacancy.location}</li>".html_safe unless @vacancy.location.blank? %>
            <%= "<li class=\"list-group-item\">#{t 'education'}: #{@vacancy.education}</li>".html_safe unless @vacancy.education.blank? %>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col col-md-6">
        <% unless @vacancy.description.blank? %>
            <div class="well">
              <h3><%= t 'Job description' %>:</h3>
              <%= @vacancy.description %>
            </div>
        <% end %>
      </div>
      <div class="col col-md-6">
        <div class="well">
          <h3>Your resume:</h3>
          <h5>If you are interested in this position, please send us your CV (in format <b>pdf, doc, docx</b>) and we will contact you ASAP</h5>
          <%= form_tag(send_cv_vacancy_path, :multipart => true, :method => 'post') do %>
              <div class="form-group no-margins">
                <%= label_tag :name %>
                <%= text_field_tag :name, '', {class: 'form-control', placeholder: 'Enter your name'} %>
              </div>
              <div class="form-group no-margins">
                <%= label_tag :email %>
                <%= email_field_tag :email, '', {class: 'form-control', placeholder: 'Enter your email'} %>
              </div>
              <div class="form-group no-margins">
                <%= label_tag :attachment %>
                <%= file_field_tag :attachment, multiple: false %>
              </div>
              <%= submit_tag 'Send resume' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>