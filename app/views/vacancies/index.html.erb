<div class="page-header">
  <h1><%=t "#{controller_name}" %>
    <small><%= action_name %></small>
  </h1>
</div>
<div class="body_panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-8">
        <% unless @vacancies.blank? %>
            <% @vacancies.each do |vacancy| %>
                <%= render "item", {item: vacancy} %>
            <% end %>
        <% else %>
            <div><%=t "no vacancies yet" %></div>
        <% end %>
      </div>
      <div class="col-md-4">
        <% unless @categories.blank? %>
            <div class="list-group">
              <% @categories.each do |category| %>
                  <%= link_to "#{t category.name.to_s}<span class=\"badge\">#{category.vacancies.size}</span>".html_safe, vacancies_path(:cat => category.id), class: "list-group-item#{category.id == params[:cat].to_i ? ' active' : ''}" %>
              <% end %>
              <%= link_to "#{t 'All'}<span class=\"badge\">#{Vacancy.all.size}</span>".html_safe, vacancies_path, class: "list-group-item#{!params[:cat].present? ? ' active' : ''}" %>
            </div>
        <% else %>
            <div><%=t  'categories are empty'%></div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="text-center"><%= will_paginate @vacancies, renderer: BootstrapPagination::Rails %></div>
</div>

